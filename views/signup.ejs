<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src="javascripts/angular.min.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <style>
        body        { padding-top:80px; }

    li {
        list-style: none;
        margin-bottom: 1em;
    }
    input { border: 2px solid black; }
    input:-moz-ui-invalid { box-shadow: none; }
    </style>
</head>
<body ng-app="whiteboard">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <% if (message.length > 0) {%> 
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group" ng-controller="login">
            <label>Email</label>
            <input type="text" class="form-control" ng-model="email" name="email">
            <label ng-hide="emailFree" for="email">Email is not taken </label>
            <label ng-show="emailFree" for="email">Email is taken </label>
            <label>Username</label>
            <input type="text" class="form-control" ng-model="username" name="username">
            <label ng-show="usernameisFree" for="username">Username is not taken </label>
            <label ng-show="usernameFree" for="username">Username is taken </label>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>

